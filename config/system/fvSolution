FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(p|pcorr)"
    {
        solver          PCG;
        preconditioner  diagonal;
        tolerance       1e-8;
        //relTol          0.001;
    }

    "(p|pcorr)Final"
    {
        $p;
        //relTol          0;
    }

    "(rho|U|nut|nuTilda|e)"
    {
        solver          PBiCGStab;
        preconditioner  diagonal;
        tolerance       1e-9;
        //relTol          0.001;
    }

    "(rho|U|nut|nuTilda|e)Final"
    {
        $U;
        //relTol          0;
    }

    cellDisplacement
    {
        solver          GAMG;
        smoother        GaussSeidel;
        tolerance       1e-7;
        relTol          0.01;
    }
}


PIMPLE
{
    nCorrectors              5;
    nNonOrthogonalCorrectors 1;
    nOuterCorrectors         3;
    // pMinFactor      0.1;
    // pMaxFactor      2;
}

relaxationFactors
{
    equations
    {
        ".*"     1;
    }
}


